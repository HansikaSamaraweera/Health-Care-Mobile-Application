<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addPatient" android:orientation="vertical">

    <EditText
            android:id="@+id/edpname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Patient Name"
            android:backgroundTint="#08AE9E"
            android:inputType="textPersonName"/>

    <EditText
            android:id="@+id/edage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Age"
            android:backgroundTint="#08AE9E"
            android:inputType="textPersonName"/>

    <RadioButton
            android:id="@+id/rdMale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
    />

    <RadioButton
            android:id="@+id/rdFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
    />
    <EditText
            android:id="@+id/eddiagnosed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Diagnosed"
            android:backgroundTint="#08AE9E"
            android:inputType="textPersonName"/>

    <EditText
            android:id="@+id/edMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Medicine"
            android:backgroundTint="#08AE9E"
            android:inputType="textPersonName"/>

    <EditText
            android:id="@+id/date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="2020/09/21"
            android:backgroundTint="#08AE9E"
            android:inputType="textPersonName"/>

    <Spinner
            android:id="@+id/spinner123"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Blood Group"
    />
    <EditText
            android:id="@+id/edPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Phone"
            android:backgroundTint="#08AE9E"
            android:inputType="textPersonName"/>

    <EditText
            android:id="@+id/eddocName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="DoctorName"
            android:backgroundTint="#08AE9E"
            android:inputType="textPersonName"/>

    <EditText
            android:id="@+id/date1234"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Follow Up"
            android:backgroundTint="#08AE9E"
            android:inputType="textPersonName"/>

    <Button
            android:id="@+id/btnconfirm"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:background="#08AE9E"
            android:gravity="center"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="60dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="15dp"/>
    <Button
            android:id="@+id/btncancel"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="78dp"
            android:background="#6BCDFD"
            android:gravity="center"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>
</LinearLayout>